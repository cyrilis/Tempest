$width = 350px;
$red = #ff4e5f;
body{
  margin: 0;
  padding: 0;
  font-family "Helvetica Neue Light", "HelveticaNeue-Light", "Helvetica Neue", Calibri, Helvetica, Arial, sans-serif
  user-select none
}
.hide{
  display none;
}
#player{
  margin-top: 10px;
  height: 10px;
}

/* UI component */

.button {
  display: inline-block;
  width: auto !important;
  padding: 5px 10px;
  font-size: 1em;
  line-height: 1;
  color: #666;
  border: 1px solid #f0f0f0;
  background: #f0f0f0;
  outline: 0;
  -webkit-transition: background 0.3s ease-out, border-color 0.3s ease-out, transform 0.2s;
  -moz-transition: background 0.3s ease-out, border-color 0.3s ease-out, transform 0.2s;
  -ms-transition: background 0.3s ease-out, border-color 0.3s ease-out, transform 0.2s;
  -o-transition: background 0.3s ease-out, border-color 0.3s ease-out, transform 0.2s;
  transition: background 0.3s ease-out, border-color 0.3s ease-out, transform 0.2s;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}
.button:hover {
  background: #ddd;
  border-color: #ddd;
}
.button:active {
  -webkit-transform: scale(1.05);
  -moz-transform: scale(1.05);
  -ms-transform: scale(1.05);
  -o-transform: scale(1.05);
  transform: scale(1.05);
}
.button.primary {
  background: #00a6e8;
  color: #fff;
}
.button.primary:hover {
  background: #05b8ff;
}

audio{
  display: none;
}
progress::-webkit-progress-value{
  background: #dddddd;
  height: 10px;
  border-radius: 5px;
}
progress::-webkit-progress-bar{
  background: transparent;
  height: 10px;
  border-radius: 5px;
}
progress{
  -webkit-appearance: none;
  border-radius: 5px;
  overflow: hidden;
  height: 10px;
  width: 100%;
  display: block;
  margin: 0;
  padding: 0;
}
progress.player-progress-played{
  z-index: 999;
  width: 99%;
  padding: 0 0.5%;
}
progress.player-progress-buffer{
  z-index: 998;
  width: 99%;
  padding: 0 0.5%;
}
progress.player-progress-buffer::-webkit-progress-bar{
  background-color: #ffffff;
}
progress.player-progress-played::-webkit-progress-value{
  background: $red;
  height: 10px;
  border-radius: 5px 0 0 5px;
}
input[data-player="seek"]{
  display block
  width: 100%;
  -webkit-appearance: none;
  background: transparent;
  border-radius: 5px;
  height: 10px;
  margin: 0;
  outline: none;
}
input[data-player="volume"]{
  position: absolute;
  bottom: 40px;
  right: 20px;
  width: 30px;
  -webkit-appearance: none;
  background-color: #EEE;
  background-image: -moz-linear-gradient($red, $red);
  background-image: -webkit-linear-gradient($red, $red);
  background-image: linear-gradient($red, $red);
  background-size: 0 100%;
  background-repeat: no-repeat;
  border-radius: 5px;
  height: 5px;
  margin: 0;
  outline: none;
  transform: rotate(-90deg);
}

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  background-color: $red;
  width: 16px;
  height: 16px;
  border-radius: 50%;
  border: 2px solid white;
  cursor: pointer;
  transition: .3s ease-in-out;
}â€‹
 input[type="range"]:not(.player-volume)::-webkit-slider-thumb:hover {
   background-color: white;
   border: 2px solid $red;
   transform: scale(1.3)
 }
 input[type="range"]:not(.player-volume)::-webkit-slider-thumb:active {
   transform: scale(1.5);
 }

input.player-volume[type=range]::-webkit-slider-thumb {
  border-radius: 50%;
  border-width 0;
  width: 5px;
  height: 5px;
}

input[data-player="captions"],
.icon-captions-on,
.icon-captions-on + svg,
.sr-only,
button[data-player="fullscreen"],
button[data-player="restart"],
button[data-player="rewind"],
button[data-player="play"],
button[data-player="pause"],
button[data-player="fast-forward"],
input[data-player="mute"] + label{
  display: none;
}

@-webkit-keyframes rotation {
  from {
    -webkit-transform: rotate(0deg); }

  to {
    -webkit-transform: rotate(359deg); } }

@keyframes rotation {
  from {
    transform: rotate(0deg); }

  to {
    transform: rotate(359deg); } }

@keyframes ripple {
  from{
    transform: scale(0);
  }
  to {
    transform: scale(2);
  }
}

@keyframes fadeout {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
  }
}


/* icon */

.icon {
  display: inline-block;
  width: 1em;
  height: 1em;
  fill: currentColor;
}

.wrapper{
  position: relative;
  width: 350px;
  margin-left 50px
  transition: width 0.3s;
  &.open{
    width: 550px;
    .sidebar{
      box-shadow: 0 0 50px rgba(0, 0, 0, 0.6);
    }
  }
}

/* Main  */

.main{
  position: absolute;
  top: 50px;
  left 0;
  overflow: hidden;
  display: block;
  width: 350px;
  height: 450px;
  background: #333333;
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  box-shadow: 0 0 50px rgba(0, 0, 0, 0.6);
}

 /* Sidebar */

.sidebar{
  position: absolute;
  right: 0
  top: 70px
  width: 200px;
  padding-left: 10px;
  height 410px;
  background: rgba(51, 51, 51, 0.975)
  -webkit-border-radius: 5px;
  -moz-border-radius: 5px;
  border-radius: 5px;
  box-shadow: 0 0 0 rgba(0, 0, 0, 0.6);
  z-index: -1;
  transition all 0.3s
  .loading{
    position: absolute
    color: #ffffff;
    font-size 100px;
    background: #333
    width: 100%;
    height: 100%;
    top: 0
    left: 0
    -webkit-border-radius: 5px
    -moz-border-radius: 5px
    border-radius: 5px
    svg{
      margin-top 150px
      margin-left 50px
      width: 100px;
      height: 100px;
      -webkit-animation: rotation 1s infinite linear;
    }
  }
  .user{
    margin-top 15px;
    color: #ffffff;
    text-align: center;
    height: 185px
    overflow: auto
    p{
      margin: 5px 0 5px 0;
    }
    .avatar{
      width: 80px;
      height 80px;
      margin: 0 auto;
      background-repeat: no-repeat;
      background-position: 50%;
      background-color: #444444;
      background-size cover
      overflow hidden;
      -webkit-border-radius: 50%;
      -moz-border-radius: 50%;
      border-radius: 50%;
      cursor: pointer;
    }
    .user-desc{
      max-height: 60px;
      overflow: auto;
      font-size: 14px;
      padding: 0 5px;
      color: #cccccc;
      line-height 1.3
    }
  }

  .login-form{
    margin-top: 30px;
    margin-bottom: 30px;
    padding: 10px;
    color: #dddddd;
    font-size 14px;
    label{
      line-height 15px
    }
    input{
      color: #cccccc;
      padding: 5px 6px;
      border: 1px solid #666666;
      background: #444444;
      margin-bottom: 5px;
      width: 165px;
      outline 0;
    }
  }
  .channels{
    height 200px
    overflow: auto;
    border-top 1px solid #393939
    padding-top 4px
    margin-top 4px;
    border-bottom 1px solid #000000
    ul{
      margin: 0;
      padding: 0;
      list-style none;
      font-size 16px;
      li{
        cursor pointer;
        padding: 5px 10px;
        height: 20px;
        white-space: nowrap
        overflow hidden
        width: 180px
        color: #cccccc;
        text-overflow ellipsis
        line-height 20px
        transition all 0.3s
        border-top: 1px solid #434343;
        border-bottom: 1px solid #1B1B1B;
        &.active{
          background: #242424
        }
        &:hover{
          color: #ffffff;
          background: #252525
        }
        &:last-child{
          border-bottom 0
        }
      }
    }
  }
}
.menu, .info, .close{
  display block
  position: absolute
  top: 5px
  color: #dddddd;
  font-size: 32px;
  cursor: pointer
  z-index: 900;
  -webkit-app-region: no-drag;
}
.close{
  left: 10px;
  top: 10px;
  font-size: 16px;
  width: 32px;
  height: 32px;
  color: #333333;
  opacity: 1;
  transition: all 0.3s
  -webkit-border-radius: 50%;
  -moz-border-radius: 50%;
  border-radius: 50%;
  svg {
    display: block;
    margin: 8px auto;
  }
  &:hover{
    transform: scale(1.3);
    color: #FFFFFF;
    background: #000;
  }
  &:active{
    transform: scale(0.5)
  }
}
.menu, .info{
  top: 20px;
  right: 20px;
  color: #ccc;
  width: 32px;
  height: 32px;
  opacity 0
  transition: all 0.3s
  .album:hover & {
    opacity 1
  }
  &:hover{
    color: #ffffff
  }
}
.info{
  left: initial
  right: 20px
  top: initial
  bottom: 20px
}

.album{
  overflow: hidden;
  width: 100%;
  height: 350px;
  position: relative;
  -webkit-border-radius: 0 0 5px 5px
  -moz-border-radius: 0 0 5px 5px
  border-radius: 0 0 5px 5px
  &:after{
    display block
    content: ""
    width: 100%;
    height: 100%;
    overflow: hidden;
    position: absolute
    top: 0
    left: 0
    background: rgba(0, 0, 0, 0.5)
    opacity: 0;
    transition opacity 0.3s
    border-radius: 5px;
  }
  &:hover{
    &:after{
      opacity 0
    }
  }
  .loading{
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background: rgba(0,0,0,0.3);
    opacity: 0;
    z-index: 800;
    font-size: 100px;
    text-align: center;
    transition: opacity 0.3s
    svg{
      color: #ffffff;
      display block;
      margin: 125px auto;
      -webkit-animation: rotation 1s infinite linear;
    }
    &.show{
      opacity: 1;
    }
  }
}

.information{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 40%;
  color #ffffff
  font-size: 18px
  line-height: 25px
  box-sizing border-box
  padding: 0 18px
  text-align right
  left: 0;
  opacity: 0.8;
  transition: all 0.3s
  background: linear-gradient(to bottom, rgba(72,76,97,0) 0%, rgba(72,76,97,1) 80%);
  transform: translate3d(0, 40%, 0);
  pointer-events: none;
  -webkit-border-radius: 0 0 5px 5px
  -moz-border-radius: 0 0 5px 5px
  border-radius: 0 0 5px 5px
  div{
    overflow hidden
    white-space nowrap
    text-overflow ellipsis
  }
  .artist{
    font-size: 14px
    color: #cccccc
  }
  .album-title{
    font-size: 14px
    color: #cccccc
  }
  .album:hover & {
    opacity: 1;
    transform: translate3d(0, 0, 0);
  }
}


.album img{
  display: block;
  width: 100%;
  opacity 0
  transition: opacity 0.3s
  &.show{
    opacity 1
  }
}

.player-controls{
  *{
    -webkit-app-region: no-drag;
  }
  .player-progress{
    position: relative;
    height: 10px;
    width: $width - 30px;
    margin: 0 15px;
    margin-top: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
  }
  .player-time{
    position: absolute
    top: 300px;
    left: 20px;
    color: #ffffff;
    font-size: 16px;
    font-family: "Avenir Next";
  }
}

.player-progress input{
  position: absolute;
  top: 0;
  z-index: 1000;
}

.player-progress progress{
  position: absolute;
  top: 0;
}

.controls{
  font-size: 36px;
  color: #ffffff;
  text-align: center;
  margin-top: 15px;
  > div.icon{
    /* Disable Drag */
    -webkit-app-region: no-drag;
    display: inline-block;
    color: #dddddd
    margin: 0 5px;
    position: relative;
    vertical-align middle
    -webkit-transition: all 0.3s
    -moz-transition: all 0.3s
    -ms-transition: all 0.3s
    -o-transition: all 0.3s
    transition: all 0.3s
    &.play{
      display: inline-block;
      font-size: 42px;
      line-height: 36px;
      .icon-play{
        display block;
      }
      .icon-pause{
        display none;
      }
    }

    &.heart{
      position relative
      svg {
        display: block;
        top: 0;
        position: absolute;
        left: 0;
        transition opacity 0.3s;
      }
      &:hover{
        color: $red;
      }
      .player.like + & {
        color: $red;
        .icon-heart-broken{
          display: block;
        }
        &:hover{
          .icon-heart{
            opacity 0
          }
        }
      }
    }

    &.unheart{
      display: none;
    }
    &:hover{
      color: #ffffff;
    }
    &:after {
      pointer-events: none;
      position: absolute;
      width: 100%;
      height: 100%;
      border-radius: 50%;
      content: '';
      -webkit-box-sizing: content-box;
      -moz-box-sizing: content-box;
      box-sizing: content-box;
      top: -2px;
      left: -2px;
      padding: 2px;
      z-index: 0;
      background: #fff;
      -webkit-transform: scale(0);
      -moz-transform: scale(0);
      -ms-transform: scale(0);
      transform: scale(0);
    }
    &.animated:after{
      -webkit-animation: ripple 0.2s forwards, fadeout 0.3s forwards
      -o-animation: ripple 0.2s forwards, fadeout 0.3s forwards
      animation: ripple 0.2s forwards, fadeout 0.3s forwards
    }
  }
}

.player.playing + .controls{
  .play .icon-play{
    display: none;
  }
  .play .icon-pause{
    display: block;
  }
}
